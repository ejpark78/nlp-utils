{
  "settings": {
    "index": {
      "max_ngram_diff": 10
    },
    "number_of_shards": 1,
    "number_of_replicas": 1,
    "analysis": {
      "analyzer": {
        "ngram_analyzer": {
          "tokenizer": "ngram_tokenizer"
        }
      },
      "tokenizer": {
        "ngram_tokenizer": {
          "type": "ngram",
          "min_gram": 1,
          "max_gram": 9,
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "document_id": {
        "type": "text"
      },
      "tag": {
        "type": "text"
      },
      "source": {
        "type": "text"
      },
      "text": {
        "type": "text",
        "analyzer": "ngram_analyzer"
      }
    }
  }
}
