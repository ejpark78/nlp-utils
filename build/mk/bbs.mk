
BBS_PRJ = bbs
BBS_YAML = $(YAML_DIR)/bbs.yml
BBS_EX_NAME = crawler.bbs

bbs-start:
	CRAWLER_OPT="$(CRAWLER_OPT)" \
	CRAWLER_IMAGE="$(CRAWLER_IMAGE)" \
	USE_POST_MQ="$(USE_POST_MQ)" \
	CORPUS_PROCESSOR_IMAGE="$(CORPUS_PROCESSOR_IMAGE)" \
	HTTP_PROXY="$(HTTP_PROXY)" \
	HTTPS_PROXY="$(HTTPS_PROXY)" \
	ELASTIC_HOST="$(ELASTIC_HOST)" \
	RESTART="$(RESTART)" \
	RABBITMQ_USER="$(RABBITMQ_USER)" \
	RABBITMQ_PASS="$(RABBITMQ_PASS)" \
	RABBITMQ_EXCHANGE_NAME="$(BBS_EX_NAME)" \
		docker-compose $(COMPOSE_HOST) -p $(BBS_PRJ) -f $(BBS_YAML) up -d

bbs-stop:
	CRAWLER_OPT="$(CRAWLER_OPT)" \
	CRAWLER_IMAGE="$(CRAWLER_IMAGE)" \
	USE_POST_MQ="$(USE_POST_MQ)" \
	CORPUS_PROCESSOR_IMAGE="$(CORPUS_PROCESSOR_IMAGE)" \
	HTTP_PROXY="$(HTTP_PROXY)" \
	HTTPS_PROXY="$(HTTPS_PROXY)" \
	ELASTIC_HOST="$(ELASTIC_HOST)" \
	RESTART="$(RESTART)" \
	RABBITMQ_USER="$(RABBITMQ_USER)" \
	RABBITMQ_PASS="$(RABBITMQ_PASS)" \
	RABBITMQ_EXCHANGE_NAME="$(BBS_EX_NAME)" \
		docker-compose $(COMPOSE_HOST) -p $(BBS_PRJ) -f $(BBS_YAML) down

bbs-logs:
	CRAWLER_OPT="$(CRAWLER_OPT)" \
	CRAWLER_IMAGE="$(CRAWLER_IMAGE)" \
	USE_POST_MQ="$(USE_POST_MQ)" \
	CORPUS_PROCESSOR_IMAGE="$(CORPUS_PROCESSOR_IMAGE)" \
	HTTP_PROXY="$(HTTP_PROXY)" \
	HTTPS_PROXY="$(HTTPS_PROXY)" \
	ELASTIC_HOST="$(ELASTIC_HOST)" \
	RESTART="$(RESTART)" \
	RABBITMQ_USER="$(RABBITMQ_USER)" \
	RABBITMQ_PASS="$(RABBITMQ_PASS)" \
	RABBITMQ_EXCHANGE_NAME="$(BBS_EX_NAME)" \
		docker-compose $(COMPOSE_HOST) -p $(BBS_PRJ) -f $(BBS_YAML) logs -f
