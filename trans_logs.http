GET {{host}}/log_mtdemo_*/_search
Authorization: Basic {{username}} {{password}}
Content-Type: application/json
Accept: application/text

{
  "from": 0,
  "size": 20,
  "track_total_hits": true,
  "query": {
    "bool": {
      "filter": [
        {
          "match": {
            "client_info.game_code": "l2-en"
          }
        },
        {
          "match": {
            "source_lang": "en"
          }
        },
        {
          "match": {
            "target_lang": "tw"
          }
        }
      ],
      "must": {
        "range": {
          "client_info.request_date": {
            "gte": "2020-01-01",
            "lte": "2020-05-20",
            "format": "yyyy-MM-dd"
          }
        }
      }
    }
  }
}

