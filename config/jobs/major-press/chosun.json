{
  "_id": "chosun",
  "daemon": {
    "sleep": 1800
  },
  "#trace_list": "기사 목록 정보, 기사를 저장할 위치/인덱스, 슬립타임 설정",
  "trace_list": [
    {
      "host": "http://b1:9200",
      "index": "crawler-major_press-chosun",
      "sleep": 2,
      "list": [
        {
          "url_frame": "http://news.chosun.com/svc/list_in/list.html?catid=82&source=1&pn={page}",
          "category": "야구"
        }
      ],
      "article": {
        "document_id": {
          "type": "path",
          "replace": [
            {
              "from": "/site/data/html_dir/[0-9]+/[0-9]+/[0-9]+/",
              "to": ""
            },
            {
              "from": "/",
              "to": "-"
            },
            {
              "from": ".html",
              "to": ""
            }
          ]
        }
      },
      "post_process": [
        {
          "name": "rabbit mq 에 메세지를 보낸다.",
          "module": "rabbit_mq",
          "exchange": {
            "type": "topic",
            "name": "crawler.major_press"
          },
          "host": "amqp://user:nlplab!@koala.korea.ncsoft.corp:5672//",
          "payload": {
            "elastic": {
              "host": "http://b1:9200",
              "index": "corpus_process-major_press-chosun"
            }
          }
        }
      ]
    }
  ]
}
