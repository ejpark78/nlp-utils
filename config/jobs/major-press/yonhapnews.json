{
  "_id": "yonhapnews",
  "daemon": {
    "sleep": 1800
  },
  "#trace_list": "기사 목록 정보, 기사를 저장할 위치/인덱스, 슬립타임 설정",
  "trace_list": [
    {
      "host": "http://corpus.ncsoft.com:9200",
      "index": "crawler-major_press-yonhapnews",
      "sleep": 2,
      "list": [
        {
          "url_frame": "https://www.yna.co.kr/sports/baseball/{page}",
          "category": "야구"
        }
      ],
      "article": {
        "document_id": {
          "type": "path",
          "replace": [
            {
              "from": "/view/",
              "to": ""
            }
          ]
        }
      },
      "#post_process": "기사를 저장후, 실행하는 작업",
      "post_process": [
        {
          "name": "코퍼스 전처리",
          "module": "corpus_process",
          "index": "corpus_process-major_press-yonhapnews",
          "target_url": "http://172.20.78.134:9200",
          "host": "http://nlp.ncsoft.com:10009/v1.0/batch"
        },
        {
          "name": "기사 본문의 이미지를 AWS S3에 업로드한다.",
          "module": "save_s3",
          "path": "yonhapnews_sports",
          "bucket": "paige-cdn-origin",
          "url_prefix": "http://paige-cdn.plaync.com"
        },
        {
          "name": "rabbit mq 에 메세지를 보낸다.",
          "module": "rabbit_mq",
          "exchange": {
            "type": "topic",
            "name": "crawler.major_press"
          },
          "host": {
            "name": "g7",
            "port": 5672,
            "user_name": "user",
            "user_password": "nlplab!"
          },
          "payload": {
            "post_mq": true,
            "elastic": {
              "host": "http://corpus.ncsoft.com:9200",
              "index": "corpus_process-major_press-yonhapnews"
            },
            "module": [
              {
                "name": "nlu/POS",
                "domain": "baseball",
                "column": "html_content",
                "result": "pos_tagged"
              },
              {
                "name": "sp/ne_tagger",
                "domain": "baseball",
                "column": "html_content",
                "result": "named_entity"
              },
              {
                "name": "nlu/NER",
                "domain": "baseball",
                "column": "html_content",
                "result": "named_entity_v2"
              }
            ]
          }
        }
      ]
    }
  ]
}
