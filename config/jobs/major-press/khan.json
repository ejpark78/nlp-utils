{
  "_id": "khan",
  "daemon": {
    "sleep": 1800
  },
  "#trace_list": "기사 목록 정보, 기사를 저장할 위치/인덱스, 슬립타임 설정",
  "trace_list": [
    {
      "host": "http://nlpapi.ncsoft.com:9200",
      "index": "crawler-major_press-khan",
      "sleep": 2,
      "list": [
        {
          "url_frame": "http://news.khan.co.kr/kh_sports/baseball/index.html?&page={page}",
          "category": "야구"
        }
      ],
      "article": {
        "document_id": {
          "type": "query",
          "frame": "{code}-{artid}"
        }
      },
      "#post_process": "기사를 저장후, 실행하는 작업",
      "post_process": [
        {
          "name": "rabbit mq 에 메세지를 보낸다.",
          "module": "rabbit_mq",
          "exchange": {
            "type": "topic",
            "name": "crawler.major_press"
          },
          "host": "amqp://user:nlplab!@g7:5672//",
          "payload": {
            "elastic": {
              "host": "http://nlpapi.ncsoft.com:9200",
              "index": "corpus_process-major_press-khan"
            }
          }
        }
      ]
    }
  ]
}
