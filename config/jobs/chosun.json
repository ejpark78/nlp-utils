          "exchange": {
            "type": "topic",
            "name": "crawler"
          },
          "host": "amqp://user:nlplab!@koala.korea.ncsoft.corp:5672//",
          "payload": {
            "elastic": {
              "host": "http://b1:9200",
              "index": "corpus_process-major_press-chosun"
            }
          }
