{
  "daemon": {
    "sleep": 1800
  },
  "#trace_list": "기사 목록 정보, 기사를 저장할 위치/인덱스, 슬립타임 설정",
  "trace_list": [
    {
      "host": "http://corpus.ncsoft.com:9200",
      "index": "crawler-nate-opinion",
      "sleep": 10,
      "list": [
        {
          "url_frame": "https://news.nate.com/columnList?mid=n0702&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "사설/사설"
        },
        {
          "url_frame": "https://news.nate.com/columnList?mid=n0704&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "사설/칼럼"
        }
      ],
      "article": {
        "document_id": {
          "type": "path",
          "replace": [
            {
              "from": "/view/",
              "to": ""
            }
          ]
        }
      },
      "post_process": [
        {
          "name": "rabbit mq 에 메세지를 보낸다.",
          "module": "rabbit_mq",
          "exchange": {
            "type": "topic",
            "name": "crawler.nate"
          },
          "host": {
            "name": "g7",
            "port": 5672,
            "user_name": "user",
            "user_password": "nlplab!"
          },
          "payload": {
            "elastic": {
              "host": "http://corpus.ncsoft.com:9200",
              "index": "corpus_process-nate-opinion"
            },
            "module": [
              {
                "name": "sp/pos_tagger",
                "domain": "economy",
                "column": "html_content",
                "result": "pos_tagged"
              },
              {
                "name": "sp/ne_tagger",
                "domain": "economy",
                "column": "html_content",
                "result": "named_entity"
              },
              {
                "name": "nc/ne_tagger_v2",
                "domain": "economy",
                "column": "html_content",
                "result": "named_entity_v2"
              }
            ]
          }
        }
      ]
    }
  ]
}
