{
  "daemon": {
    "sleep": 1800
  },
  "#trace_list": "기사 목록 정보, 기사를 저장할 위치/인덱스, 슬립타임 설정",
  "trace_list": [
    {
      "host": "http://b1:9200",
      "index": "crawler-nate-sports",
      "sleep": 10,
      "url_frame": [
        {
          "url": "https://sports.news.nate.com/baseball/recent?type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "스포츠/야구"
        },
        {
          "url": "https://sports.news.nate.com/abrbaseball/recent?&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "스포츠/해외야구"
        },
        {
          "url": "https://sports.news.nate.com/soccer/recent?&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "스포츠/축구"
        },
        {
          "url": "https://sports.news.nate.com/abrsoccer/recent?&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "스포츠/해외축구"
        },
        {
          "url": "https://sports.news.nate.com/basketvolley/recent?&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "스포츠/농구-배구"
        },
        {
          "url": "https://sports.news.nate.com/general/recent?&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "스포츠/스포츠-일반"
        }
      ],
      "id_frame": {
        "type": "path",
        "replace": [
          {
            "from": "/view/",
            "to": ""
          }
        ]
      },
      "post_process": [
        {
          "name": "rabbit mq 에 메세지를 보낸다.",
          "module": "rabbit_mq",
          "exchange": {
            "type": "topic",
            "name": "crawler.nate"
          },
          "host": "amqp://user:nlplab!@koala.korea.ncsoft.corp:5672//",
          "payload": {
            "elastic": {
              "host": "http://b1:9200",
              "index": "corpus_process-nate-sports"
            }
          }
        }
      ]
    }
  ]
}
