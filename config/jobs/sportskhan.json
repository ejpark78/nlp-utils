{
  "_id": "sportskhan",
  "daemon": {
    "sleep": 1800
  },
  "#trace_list": "기사 목록 정보, 기사를 저장할 위치/인덱스, 슬립타임 설정",
  "trace_list": [
    {
      "host": "http://b1:9200",
      "index": "crawler-major_press-sportskhan",
      "sleep": 2,
      "url_frame": "http://sports.khan.co.kr/news/page/art_list_grp.html?mcode=BS&page={page}",
      "category": "야구",
      "#id_frame": "url에서 문서 아이디 추출 정보 (path, query)",
      "id_frame": {
        "type": "query",
        "frame": "{sec_id}-{art_id}"
      },
