{
  "_id": "spotvnews",
  "daemon": {
    "sleep": 1800
  },
  "trace_list": [
    {
      "host": "http://elasticsearch:9200",
      "index": "crawler-major_press-spotvnews",
      "sleep": 2,
      "list": [
        {
          "url_frame": "http://www.spotvnews.co.kr/?page={page}&mod=news&act=articleList&sc_code=1384128643&view_type=S",
          "category": "야구"
        }
      ],
      "article": {
        "document_id": {
          "type": "query",
          "frame": "{sc_code}-{idxno}"
        }
      },
      "post_process": [
        {
          "name": "기사 본문의 이미지를 AWS S3에 업로드한다.",
          "module": "save_s3",
          "path": "spotv_baseball",
          "url_prefix": "http://paige-cdn.plaync.com"
        },
        {
          "name": "RabbitMQ 메세지 전송",
          "module": "rabbit_mq",
          "exchange": {
            "type": "topic",
            "name": "crawler.paige"
          },
          "host": {
            "name": "mq-server",
            "port": 5672,
            "user_name": "user",
            "user_password": "nlplab!"
          },
          "payload": {
            "post_mq": true,
            "elastic": {
              "host": "http://elasticsearch:9200",
              "index": "corpus_process-major_press-spotvnews"
            },
            "module": [
              {
                "name": "sp/pos_tagger",
                "domain": "baseball",
                "column": "html_content",
                "result": "pos_tagged"
              },
              {
                "name": "sp/ne_tagger",
                "domain": "baseball",
                "column": "html_content",
                "result": "named_entity"
              },
              {
                "name": "nc/ne_tagger_v2",
                "domain": "baseball",
                "column": "html_content",
                "result": "named_entity_v2"
              }
            ]
          }
        }
      ]
    }
  ]
}
