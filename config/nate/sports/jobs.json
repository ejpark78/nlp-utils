{
  "daemon": {
    "sleep": 1800
  },
  "#trace_list": "기사 목록 정보, 기사를 저장할 위치/인덱스, 슬립타임 설정",
  "trace_list": [
    {
      "host": "https://corpus.ncsoft.com:9200",
      "http_auth": "crawler:crawler2019",
      "index": "crawler-nate-sports",
      "sleep": 10,
      "list": [
        {
          "url_frame": "https://sports.news.nate.com/baseball/recent?type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "스포츠/야구"
        },
        {
          "url_frame": "https://sports.news.nate.com/abrbaseball/recent?&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "스포츠/해외야구"
        },
        {
          "url_frame": "https://sports.news.nate.com/soccer/recent?&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "스포츠/축구"
        },
        {
          "url_frame": "https://sports.news.nate.com/abrsoccer/recent?&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "스포츠/해외축구"
        },
        {
          "url_frame": "https://sports.news.nate.com/basketvolley/recent?&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "스포츠/농구-배구"
        },
        {
          "url_frame": "https://sports.news.nate.com/general/recent?&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "스포츠/스포츠-일반"
        }
      ],
      "article": {
        "document_id": {
          "type": "path",
          "replace": [
            {
              "from": "/view/",
              "to": ""
            }
          ]
        }
      },
      "post_process": [
        {
          "name": "RabbitMQ 메세지 전송",
          "module": "rabbit_mq",
          "exchange": {
            "type": "topic",
            "name": "crawler"
          },
          "host": {
            "name": "localhost",
            "port": 5672,
            "user_name": "user",
            "user_password": "nlplab!"
          },
          "payload": {
            "elastic": {
              "host": "https://corpus.ncsoft.com:9200",
              "http_auth": "crawler:crawler2019",
              "index": "corpus_process-nate-sports"
            },
            "module": [
              {
                "name": "sp/pos_tagger",
                "domain": "baseball",
                "column": "html_content",
                "result": "pos_tagged"
              },
              {
                "name": "sp/ne_tagger",
                "domain": "baseball",
                "column": "html_content",
                "result": "named_entity"
              },
              {
                "name": "nc/ne_tagger_v2",
                "domain": "baseball",
                "column": "html_content",
                "result": "named_entity_v2"
              }
            ]
          }
        }
      ]
    }
  ]
}
