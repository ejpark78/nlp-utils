{
  "daemon": {
    "sleep": 1800
  },
  "#trace_list": "기사 목록 정보, 기사를 저장할 위치/인덱스, 슬립타임 설정",
  "trace_list": [
    {
      "host": "http://elasticsearch:9200",
      "http_auth": "crawler:crawler2019",
      "index": "crawler-nate-politics",
      "sleep": 10,
      "list": [
        {
          "url_frame": "https://news.nate.com/subsection?mid=n0202&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "사회/청와대"
        },
        {
          "url_frame": "https://news.nate.com/subsection?mid=n0203&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "사회/국회/정당"
        },
        {
          "url_frame": "https://news.nate.com/subsection?mid=n0204&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "사회/외교/국방"
        },
        {
          "url_frame": "https://news.nate.com/subsection?mid=n0205&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "사회/북한"
        },
        {
          "url_frame": "https://news.nate.com/subsection?mid=n0206&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "사회/행정"
        },
        {
          "url_frame": "https://news.nate.com/subsection?mid=n0207&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "사회/정치 일반"
        }
      ],
      "article": {
        "document_id": {
          "type": "path",
          "replace": [
            {
              "from": "/view/",
              "to": ""
            }
          ]
        }
      },
      "post_process": [
        {
          "name": "RabbitMQ 메세지 전송",
          "module": "rabbit_mq",
          "exchange": {
            "type": "topic",
            "name": "crawler.nate"
          },
          "host": {
            "name": "mq_server",
            "port": 5672,
            "user_name": "user",
            "user_password": "nlplab!"
          },
          "payload": {
            "elastic": {
              "host": "http://elasticsearch:9200",
              "http_auth": "crawler:crawler2019",
              "index": "corpus_process-nate-politics"
            },
            "module": [
              {
                "name": "sp/pos_tagger",
                "domain": "economy",
                "column": "html_content",
                "result": "pos_tagged"
              },
              {
                "name": "sp/ne_tagger",
                "domain": "economy",
                "column": "html_content",
                "result": "named_entity"
              },
              {
                "name": "nc/ne_tagger_v2",
                "domain": "economy",
                "column": "html_content",
                "result": "named_entity_v2"
              }
            ]
          }
        }
      ]
    }
  ]
}
