{
  "daemon": {
    "sleep": 1800
  },
  "#trace_list": "기사 목록 정보, 기사를 저장할 위치/인덱스, 슬립타임 설정",
  "trace_list": [
    {
      "host": "http://corpus.ncsoft.com:9200",
      "index": "crawler-nate-tv",
      "sleep": 10,
      "list": [
        {
          "url_frame": "https://news.nate.com/recentTV?mid=n0903&cp=sv&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "TV/SBS"
        },
        {
          "url_frame": "https://news.nate.com/recentTV?mid=n0908&cp=jt&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "TV/JTBC"
        },
        {
          "url_frame": "https://news.nate.com/recentTV?mid=n0904&cp=yn&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "TV/YTN"
        },
        {
          "url_frame": "https://news.nate.com/recentTV?mid=n0911&cp=nt&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "TV/MBN"
        },
        {
          "url_frame": "https://news.nate.com/recentTV?mid=n0905&cp=ny&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "TV/연합뉴스TV"
        },
        {
          "url_frame": "https://news.nate.com/recentTV?mid=n0914&cp=ob&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "TV/OBS TV"
        },
        {
          "url_frame": "https://news.nate.com/recentTV?mid=n0912&cp=cn&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "TV/SBSCNBC"
        },
        {
          "url_frame": "https://news.nate.com/recentTV?mid=n0913&cp=ht&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "TV/한국경제TV"
        },
        {
          "url_frame": "https://news.nate.com/recentTV?mid=n0915&cp=kv&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "TV/KTV국민방송"
        },
        {
          "url_frame": "https://news.nate.com/liveNews?mid=n0910&type=t&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "TV/실시간 중계"
        }
      ],
      "article": {
        "document_id": {
          "type": "path",
          "replace": [
            {
              "from": "/view/",
              "to": ""
            }
          ]
        }
      },
      "post_process": [
        {
          "name": "rabbit mq 에 메세지를 보낸다.",
          "module": "rabbit_mq",
          "exchange": {
            "type": "topic",
            "name": "crawler.nate"
          },
          "host": {
            "name": "mq-server",
            "port": 5672,
            "user_name": "user",
            "user_password": "nlplab!"
          },
          "payload": {
            "elastic": {
              "host": "http://corpus.ncsoft.com:9200",
              "index": "corpus_process-nate-tv"
            },
            "module": [
              {
                "name": "sp/pos_tagger",
                "domain": "economy",
                "column": "html_content",
                "result": "pos_tagged"
              },
              {
                "name": "sp/ne_tagger",
                "domain": "economy",
                "column": "html_content",
                "result": "named_entity"
              },
              {
                "name": "nc/ne_tagger_v2",
                "domain": "economy",
                "column": "html_content",
                "result": "named_entity_v2"
              }
            ]
          }
        }
      ]
    }
  ]
}
