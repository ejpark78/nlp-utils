{
  "_id": "newsis",
  "daemon": {
    "sleep": 1800
  },
  "#trace_list": "기사 목록 정보, 기사를 저장할 위치/인덱스, 슬립타임 설정",
  "trace_list": [
    {
      "host": "http://elasticsearch:9200",
      "index": "crawler-major_press-newsis",
      "sleep": 2,
      "list": [
        {
          "url_frame": "http://www.newsis.com/spo/list/?cid=10500&scid=10502&page={page}",
          "category": "스포츠"
        }
      ],
      "article": {
        "document_id": {
          "type": "query",
          "frame": "{cid}-{id}"
        }
      },
      "#post_process": "기사를 저장후, 실행하는 작업",
      "post_process": [
        {
          "name": "RabbitMQ 메세지 전송",
          "module": "rabbit_mq",
          "exchange": {
            "type": "topic",
            "name": "crawler.major_press"
          },
          "host": {
            "name": "mq_server",
            "port": 5672,
            "user_name": "user",
            "user_password": "nlplab!"
          },
          "payload": {
            "post_mq": false,
            "elastic": {
              "host": "http://elasticsearch:9200",
              "index": "corpus_process-major_press-newsis"
            },
            "module": [
              {
                "name": "sp/pos_tagger",
                "domain": "baseball",
                "column": "html_content",
                "result": "pos_tagged"
              },
              {
                "name": "sp/ne_tagger",
                "domain": "baseball",
                "column": "html_content",
                "result": "named_entity"
              },
              {
                "name": "nc/ne_tagger_v2",
                "domain": "baseball",
                "column": "html_content",
                "result": "named_entity_v2"
              }
            ]
          }
        }
      ]
    }
  ]
}
