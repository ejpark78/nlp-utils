{
  "_id": "sportskhan",
  "trace_list": {
    "parser": "lxml",
    "#trace": "전체 html 에서 추출해야하는 전체 tag 목록",
    "trace": [
      {
        "name": "div",
        "attribute": {
          "id": "content_sm"
        }
      },
      {
        "name": "dl"
      }
    ],
    "#list": "기사 목록에서 추출해야하는 하나의 기사 정보",
    "list": [
      {
        "comment": "제목",
        "key": "title",
        "type": "text",
        "tag": [
          {
            "name": "a"
          }
        ]
      },
      {
        "comment": "url",
        "key": "url",
        "type": "href",
        "tag": [
          {
            "name": "a"
          }
        ]
      }
    ],
    "#article": "기사 본문에서 추출해야하는 tag 정보",
    "article": [
      {
        "comment": "제목",
        "key": "title",
        "type": "text",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "id": "container"
            }
          },
          {
            "name": "h1",
            "attribute": {
              "id": "article_title"
            }
          }
        ]
      },
      {
        "comment": "날짜",
        "key": "date",
        "type": "text",
        "type_convert": "date",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "byline"
            }
          }
        ],
        "replace": [
          {
            "from": "^.+(20[0-9][0-9][.\\- :0-9]+).+$",
            "to": "\\g<1>"
          }
        ]
      },
      {
        "comment": "글쓴이",
        "key": "author",
        "type": "text",
        "tag": [
          {
            "name": "p",
            "attribute": {
              "class": "info_byline"
            }
          }
        ]
      },
      {
        "comment": "html 본문",
        "key": "html_content",
        "type": "html",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "id": "articleBody"
            }
          }
        ],
        "remove": [
          {
            "name": "div",
            "attribute": {
              "class": "article_bottom_ad"
            }
          },
          {
            "name": "div",
            "attribute": {
              "id": "photoAD"
            }
          }
        ]
      },
      {
        "comment": "이미지",
        "key": "image_list.image",
        "type": "html",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "art_photo_wrap"
            }
          },
          {
            "name": "img"
          }
        ]
      },
      {
        "comment": "이미지 캡션",
        "key": "image_list.caption",
        "type": "alt",
        "delete": true,
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "art_photo_wrap"
            }
          },
          {
            "name": "img"
          }
        ]
      },
      {
        "comment": "이미지 캡션",
        "key": "image_list.caption",
        "type": "text",
        "delete": true,
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "art_photo_wrap"
            }
          },
          {
            "name": "p",
            "attribute": {
              "class": "caption"
            }
          }
        ]
      },
      {
        "comment": "텍스트 본문",
        "key": "content",
        "type": "text",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "id": "articleBody"
            }
          }
        ]
      },
      {
        "comment": "기사 문단",
        "key": "content_text",
        "type": "text",
        "tag": [
          {
            "name": "p",
            "attribute": {
              "class": "content_text"
            }
          }
        ]
      }
    ]
  }
}
