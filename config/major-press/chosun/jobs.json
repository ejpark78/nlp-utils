{
  "_id": "chosun",
  "daemon": {
    "sleep": 1800
  },
  "#trace_list": "기사 목록 정보, 기사를 저장할 위치/인덱스, 슬립타임 설정",
  "trace_list": [
    {
      "host": "http://elasticsearch:9200",
      "http_auth": "crawler:crawler2019",
      "index": "crawler-major_press-chosun",
      "sleep": 2,
      "list": [
        {
          "url_frame": "http://news.chosun.com/svc/list_in/list.html?catid=82&source=1&pn={page}",
          "category": "야구"
        }
      ],
      "article": {
        "document_id": {
          "type": "path",
          "replace": [
            {
              "from": "/site/data/html_dir/[0-9]+/[0-9]+/[0-9]+/",
              "to": ""
            },
            {
              "from": "/",
              "to": "-"
            },
            {
              "from": ".html",
              "to": ""
            }
          ]
        }
      },
      "post_process": [
        {
          "name": "RabbitMQ 메세지 전송",
          "module": "rabbit_mq",
          "exchange": {
            "type": "topic",
            "name": "crawler.major_press"
          },
          "host": {
            "name": "mq_server",
            "port": 5672,
            "user_name": "user",
            "user_password": "nlplab!"
          },
          "payload": {
            "post_mq": false,
            "elastic": {
              "host": "http://elasticsearch:9200",
              "http_auth": "crawler:crawler2019",
              "index": "corpus_process-major_press-chosun"
            },
            "module": [
              {
                "name": "sp/pos_tagger",
                "domain": "baseball",
                "column": "html_content",
                "result": "pos_tagged"
              },
              {
                "name": "sp/ne_tagger",
                "domain": "baseball",
                "column": "html_content",
                "result": "named_entity"
              },
              {
                "name": "nc/ne_tagger_v2",
                "domain": "baseball",
                "column": "html_content",
                "result": "named_entity_v2"
              }
            ]
          }
        }
      ]
    }
  ]
}
