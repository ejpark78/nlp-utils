{
  "trace_list": {
    "parser": "html5lib",
    "#trace": "전체 html 에서 추출해야하는 전체 tag 목록",
    "trace": [
      {
        "name": "ul",
        "attribute": {
          "class": "list_news2 list_allnews"
        }
      },
      {
        "name": "li"
      }
    ],
    "#list": "기사 목록에서 추출해야하는 하나의 기사 정보",
    "list": [
      {
        "comment": "제목",
        "key": "title",
        "type": "text",
        "tag": [
          {
            "name": "a",
            "attribute": {
              "class": "link_txt"
            }
          }
        ]
      },
      {
        "comment": "url",
        "key": "url",
        "type": "href",
        "tag": [
          {
            "name": "a",
            "attribute": {
              "class": "link_txt"
            }
          }
        ]
      }
    ],
    "#article": "기사 본문에서 추출해야하는 tag 정보",
    "article": [
      {
        "comment": "제목",
        "key": "title",
        "type": "text",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "head_view"
            }
          },
          {
            "name": "h3",
            "attribute": {
              "class": "tit_view"
            }
          }
        ]
      },
      {
        "comment": "기사 원문",
        "key": "source",
        "type": "alt",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "head_view"
            }
          },
          {
            "name": "img"
          }
        ]
      },
      {
        "comment": "날짜",
        "key": "date",
        "type": "text",
        "type_convert": "date",
        "value_type": "single",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "head_view"
            }
          },
          {
            "name": "span",
            "attribute": {
              "class": "info_view"
            }
          }
        ],
        "replace": [
          {
            "from": "^.*입력",
            "to": ""
          },
          {
            "from": "^.*수정",
            "to": ""
          },
          {
            "from": "댓글.+$",
            "to": ""
          }
        ]
      },
      {
        "comment": "글쓴이",
        "key": "author",
        "type": "text",
        "value_type": "single",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "head_view"
            }
          },
          {
            "name": "span",
            "attribute": {
              "class": "info_view"
            }
          }
        ],
        "replace": [
          {
            "from": "입력.+$",
            "to": ""
          }
        ]
      },
      {
        "comment": "html 본문",
        "key": "html_content",
        "type": "html",
        "value_type": "merge",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "article_view"
            }
          },
          {
            "name": "section"
          }
        ]
      },
      {
        "comment": "이미지",
        "key": "image_list.image",
        "type": "src",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "article_view"
            }
          },
          {
            "name": "section"
          },
          {
            "name": "img"
          }
        ]
      },
      {
        "comment": "이미지 캡션",
        "key": "image_list.caption",
        "type": "text",
        "delete": true,
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "article_view"
            }
          },
          {
            "name": "section"
          },
          {
            "name": "figcaption"
          }
        ]
      },
      {
        "comment": "VOD",
        "key": "vod",
        "type": "html",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "article_view"
            }
          },
          {
            "name": "iframe"
          }
        ]
      },
      {
        "comment": "텍스트 본문",
        "key": "content",
        "type": "text",
        "value_type": "merge",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "article_view"
            }
          },
          {
            "name": "section"
          }
        ]
      }
    ]
  }
}
