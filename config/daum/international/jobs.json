{
  "daemon": {
    "sleep": 1800
  },
  "#trace_list": "기사 목록 정보, 기사를 저장할 위치/인덱스, 슬립타임 설정",
  "trace_list": [
    {
      "host": "http://elasticsearch:9200",
      "index": "crawler-daum-international",
      "sleep": 10,
      "list": [
        {
          "url_frame": "https://media.daum.net/breakingnews/foreign/japan?regDate={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "국제/일본"
        },
        {
          "url_frame": "https://media.daum.net/breakingnews/foreign/china?regDate={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "국제/중국"
        },
        {
          "url_frame": "https://media.daum.net/breakingnews/foreign/asia?regDate={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "국제/아시아/대양주"
        },
        {
          "url_frame": "https://media.daum.net/breakingnews/foreign/america?regDate={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "국제/미주/아메리카"
        },
        {
          "url_frame": "https://media.daum.net/breakingnews/foreign/europe?regDate={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "국제/유럽"
        },
        {
          "url_frame": "https://media.daum.net/breakingnews/foreign/africa?regDate={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "국제/중동/아프리카"
        },
        {
          "url_frame": "https://media.daum.net/breakingnews/foreign/englishnews?regDate={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "국제/영어뉴스"
        },
        {
          "url_frame": "https://media.daum.net/breakingnews/foreign/topic?regDate={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "국제/해외화제"
        },
        {
          "url_frame": "https://media.daum.net/breakingnews/foreign/others?regDate={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "국제/국제일반"
        }
      ],
      "article": {
        "document_id": {
          "type": "path",
          "replace": [
            {
              "from": "/v/",
              "to": ""
            }
          ]
        }
      },
      "post_process": [
        {
          "name": "rabbit mq 에 메세지를 보낸다.",
          "module": "rabbit_mq",
          "exchange": {
            "type": "topic",
            "name": "crawler.daum"
          },
          "host": {
            "name": "mq-server",
            "port": 5672,
            "user_name": "user",
            "user_password": "nlplab!"
          },
          "payload": {
            "elastic": {
              "host": "http://elasticsearch:9200",
              "index": "corpus_process-daum-international"
            },
            "module": [
              {
                "name": "sp/pos_tagger",
                "domain": "economy",
                "column": "html_content",
                "result": "pos_tagged"
              },
              {
                "name": "sp/ne_tagger",
                "domain": "economy",
                "column": "html_content",
                "result": "named_entity"
              },
              {
                "name": "nc/ne_tagger_v2",
                "domain": "economy",
                "column": "html_content",
                "result": "named_entity_v2"
              }
            ]
          }
        }
      ]
    }
  ]
}
