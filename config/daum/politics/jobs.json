{
  "daemon": {
    "sleep": 1800
  },
  "#trace_list": "기사 목록 정보, 기사를 저장할 위치/인덱스, 슬립타임 설정",
  "trace_list": [
    {
      "host": "http://elasticsearch:9200",
      "index": "crawler-daum-politics",
      "sleep": 10,
      "list": [
        {
          "url_frame": "https://media.daum.net/breakingnews/politics/administration?regDate={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "정치/행정지자체"
        },
        {
          "url_frame": "https://media.daum.net/breakingnews/politics/assembly?regDate={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "정치/국회정당"
        },
        {
          "url_frame": "https://media.daum.net/breakingnews/politics/dipdefen?regDate={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "정치/외교국방"
        },
        {
          "url_frame": "https://media.daum.net/breakingnews/politics/north?regDate={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "정치/북한"
        },
        {
          "url_frame": "https://media.daum.net/breakingnews/politics/others?regDate={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "정치/정치일반"
        },
        {
          "url_frame": "https://media.daum.net/breakingnews/politics/president?regDate={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "정치/청와대"
        }
      ],
      "article": {
        "document_id": {
          "type": "path",
          "replace": [
            {
              "from": "/v/",
              "to": ""
            }
          ]
        }
      },
      "post_process": [
        {
          "name": "rabbit mq 에 메세지를 보낸다.",
          "module": "rabbit_mq",
          "exchange": {
            "type": "topic",
            "name": "crawler.daum"
          },
          "host": {
            "name": "mq-server",
            "port": 5672,
            "user_name": "user",
            "user_password": "nlplab!"
          },
          "payload": {
            "elastic": {
              "host": "http://elasticsearch:9200",
              "index": "corpus_process-daum-politics"
            },
            "module": [
              {
                "name": "sp/pos_tagger",
                "domain": "economy",
                "column": "html_content",
                "result": "pos_tagged"
              },
              {
                "name": "sp/ne_tagger",
                "domain": "economy",
                "column": "html_content",
                "result": "named_entity"
              },
              {
                "name": "nc/ne_tagger_v2",
                "domain": "economy",
                "column": "html_content",
                "result": "named_entity_v2"
              }
            ]
          }
        }
      ]
    }
  ]
}
