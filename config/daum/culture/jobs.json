  "trace_list": [
    {
      "host": "https://corpus.ncsoft.com:9200",
      "http_auth": "crawler:crawler2019",
      "index": "crawler-daum-culture",
      "sleep": 10,
      "list": [
        {
          "url_frame": "https://media.daum.net/breakingnews/culture/art?regDate={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "문화/공연전시"
        },
        {
          "url_frame": "https://media.daum.net/breakingnews/culture/book?regDate={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "문화/책"
        },
        {
