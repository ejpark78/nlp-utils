{
  "daemon": {
    "sleep": 1800
  },
  "#trace_list": "기사 목록 정보, 기사를 저장할 위치/인덱스, 슬립타임 설정",
  "trace_list": [
    {
      "host": "http://corpus.ncsoft.com:9200",
      "index": "crawler-naver-international",
      "sleep": 10,
      "list": [
        {
          "url_frame": "https://news.naver.com/main/list.nhn?mode=LS2D&mid=shm&sid1=104&sid2=231&listType=title&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "세계/아시아호주"
        },
        {
          "url_frame": "https://news.naver.com/main/list.nhn?mode=LS2D&mid=shm&sid1=104&sid2=232&listType=title&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "세계/미국중남미"
        },
        {
          "url_frame": "https://news.naver.com/main/list.nhn?mode=LS2D&mid=shm&sid1=104&sid2=233&listType=title&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "세계/유럽"
        },
        {
          "url_frame": "https://news.naver.com/main/list.nhn?mode=LS2D&mid=shm&sid1=104&sid2=234&listType=title&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "세계/중동아프리카"
        },
        {
          "url_frame": "https://news.naver.com/main/list.nhn?mode=LS2D&mid=shm&sid1=104&sid2=322&listType=title&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "세계/일반"
        }
      ],
      "article": {
        "document_id": {
          "type": "query",
          "frame": "{oid}-{aid}"
        }
      },
      "post_process": [
        {
          "name": "rabbit mq 에 메세지를 보낸다.",
          "module": "rabbit_mq",
          "exchange": {
            "type": "topic",
            "name": "crawler.naver"
          },
          "host": {
            "name": "mq-server",
            "port": 5672,
            "user_name": "user",
            "user_password": "nlplab!"
          },
          "payload": {
            "elastic": {
              "host": "http://corpus.ncsoft.com:9200",
              "index": "corpus_process-naver-international"
            },
            "module": [
              {
                "name": "sp/pos_tagger",
                "domain": "economy",
                "column": "html_content",
                "result": "pos_tagged"
              },
              {
                "name": "sp/ne_tagger",
                "domain": "economy",
                "column": "html_content",
                "result": "named_entity"
              },
              {
                "name": "nc/ne_tagger_v2",
                "domain": "economy",
                "column": "html_content",
                "result": "named_entity_v2"
              }
            ]
          }
        }
      ]
    }
  ]
}
