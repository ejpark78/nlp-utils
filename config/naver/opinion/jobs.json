          "payload": {
            "elastic": {
              "host": "http://frodo:9200",
              "http_auth": "crawler:crawler2019",
              "index": "corpus_process-naver-opinion"
            },
            "module": [
              {
                "name": "sp/pos_tagger",
                "domain": "economy",
                "column": "html_content",
                "result": "pos_tagged"
              },
              {
                "name": "sp/ne_tagger",
                "domain": "economy",
