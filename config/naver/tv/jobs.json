{
  "daemon": {
    "sleep": 1800
  },
  "#trace_list": "기사 목록 정보, 기사를 저장할 위치/인덱스, 슬립타임 설정",
  "trace_list": [
    {
      "host": "https://corpus.ncsoft.com:9200",
      "http_auth": "crawler:crawler2019",
      "index": "crawler-naver-tv",
      "split_index": true,
      "sleep": 10,
      "list": [
        {
          "url_frame": "https://news.naver.com/main/list.nhn?sid1=115&listType=title&mid=shm&date={date}&page={page}",
          "date_format": "%Y%m%d",
          "category": "TV"
        }
      ],
      "article": {
        "document_id": {
          "type": "query",
          "frame": "{oid}-{aid}"
        }
      },
      "post_process": [
        {
          "name": "RabbitMQ 메세지 전송",
          "module": "rabbit_mq",
          "exchange": {
            "type": "topic",
            "name": "corpus_pipeline"
          },
          "host": {
            "name": "mq.crawler-naver.svc.cluster.local",
            "port": 35672,
            "user_name": "user",
            "user_password": "nlplab!"
          },
          "payload": {
            "elastic": {
              "host": "https://corpus.ncsoft.com:9200",
              "index": "corpus_process-naver-tv",
              "http_auth": "crawler:crawler2019",
              "split_index": true
            },
            "doc_type": "web_news",
            "module": [
              {
                "name": "nlu_wrapper",
                "option": {
                  "domain": "economy",
                  "style": "literary",
                  "module": [
                    "SBD_crf",
                    "POS",
                    "NER"
                  ]
                },
                "column": "content",
                "result": "nlu_wrapper"
              }
            ]
          }
        }
      ]
    }
  ]
}
