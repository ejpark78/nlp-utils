{
  "_id": "newsis",
  "trace_list": {
    "parser": "lxml",
    "#trace": "전체 html 에서 추출해야하는 전체 tag 목록",
    "trace": {
      "key": "news_list",
      "type": "html",
      "tag": [
        {
          "name": "li",
          "attribute": {
            "class": "p1_bundle"
          }
        },
        {
          "name": "div",
          "attribute": {
            "class": "area"
          }
        }
      ]
    },
    "#list": "기사 목록에서 추출해야하는 하나의 기사 정보",
    "list": [
      {
        "comment": "제목",
        "key": "title",
        "type": "text",
        "tag": [
          {
            "name": "a"
          }
        ]
      },
      {
        "comment": "url",
        "key": "url",
        "type": "href",
        "tag": [
          {
            "name": "a"
          }
        ]
      },
      {
        "comment": "author",
        "key": "author",
        "type": "text",
        "tag": [
          {
            "name": "span",
            "attribute": {
              "class": "date"
            }
          }
        ],
        "replace": [{
          "from": "[|].+$",
          "to": ""
        }]
      }
    ],
    "#article": "기사 본문에서 추출해야하는 tag 정보",
    "article": [
      {
        "comment": "제목",
        "key": "title",
        "type": "text",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "article_tbx mgt8 w970"
            }
          },
          {
            "name": "h1"
          }
        ]
      },
      {
        "comment": "날짜",
        "key": "date",
        "type": "text",
        "type_convert": "date",
        "value_type": "single",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "date"
            }
          }
        ],
        "replace": [
          {
            "from": "등록[ ]+",
            "to": ""
          }
        ]
      },
      {
        "comment": "html 본문",
        "key": "html_content",
        "type": "html",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "itemprop": "articleBody"
            }
          }
        ],
        "remove": [
          {
            "name": "iframe"
          }
        ]
      },
      {
        "comment": "텍스트 본문",
        "key": "content",
        "type": "text",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "itemprop": "articleBody"
            }
          }
        ]
      },
      {
        "comment": "이미지",
        "key": "photo_list",
        "type": "html",
        "tag": [
          {
            "name": "table",
            "attribute": {
              "class": "article_photo center"
            }
          },
          {
            "name": "img"
          }
        ]
      },
      {
        "comment": "이미지 캡션",
        "key": "photo_caption",
        "type": "text",
        "tag": [
          {
            "name": "table",
            "attribute": {
              "class": "article_photo center"
            }
          },
          {
            "name": "td",
            "attribute": {
              "class": "desc"
            }
          }
        ]
      }
    ]
  }
}
