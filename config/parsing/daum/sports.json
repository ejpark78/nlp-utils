{
  "trace_list": {
    "parser": "html5lib",
    "trace": "content",
    "list": {
      "url": "https://sports.v.daum.net/v/{newsId}",
      "title": "{title}"
    },
    "#article": "기사 본문에서 추출해야하는 tag 정보",
    "article": [
      {
        "comment": "제목",
        "key": "title",
        "type": "text",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "head_view"
            }
          },
          {
            "name": "h3",
            "attribute": {
              "class": "tit_view"
            }
          }
        ]
      },
      {
        "comment": "기사 원문",
        "key": "source",
        "type": "alt",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "head_view"
            }
          },
          {
            "name": "img"
          }
        ]
      },
      {
        "comment": "날짜",
        "key": "date",
        "type": "text",
        "type_convert": "date",
        "value_type": "single",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "head_view"
            }
          },
          {
            "name": "span",
            "attribute": {
              "class": "info_view"
            }
          }
        ],
        "replace": [
          {
            "from": "^.+입력",
            "to": ""
          },
          {
            "from": "^.+수정",
            "to": ""
          },
          {
            "from": "댓글.+$",
            "to": ""
          }
        ]
      },
      {
        "comment": "글쓴이",
        "key": "author",
        "type": "text",
        "value_type": "single",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "head_view"
            }
          },
          {
            "name": "span",
            "attribute": {
              "class": "info_view"
            }
          }
        ],
        "replace": [
          {
            "from": "입력.+$",
            "to": ""
          }
        ]
      },
      {
        "comment": "html 본문",
        "key": "html_content",
        "type": "html",
        "value_type": "merge",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "article_view"
            }
          },
          {
            "name": "section"
          }
        ]
      },
      {
        "comment": "텍스트 본문",
        "key": "content",
        "type": "text",
        "value_type": "merge",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "article_view"
            }
          },
          {
            "name": "section"
          }
        ]
      },
      {
        "comment": "이미지",
        "key": "photo_list",
        "type": "html",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "article_view"
            }
          },
          {
            "name": "section"
          },
          {
            "name": "img"
          }
        ]
      },
      {
        "comment": "이미지 캡션",
        "key": "photo_caption",
        "type": "text",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "article_view"
            }
          },
          {
            "name": "section"
          },
          {
            "name": "figcaption"
          }
        ]
      },
      {
        "comment": "VOD",
        "key": "vod",
        "type": "html",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "article_view"
            }
          },
          {
            "name": "iframe"
          }
        ]
      }
    ]
  }
}
