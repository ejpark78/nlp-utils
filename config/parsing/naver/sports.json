{
  "_id": "naver_sports",
  "trace_list": {
    "parser": "html5lib",
    "trace": "list",
    "list": {
      "url": "/kbaseball/news/read.nhn?oid={oid}&aid={aid}",
      "title": "{title}"
    },
    "#article": "기사 본문에서 추출해야하는 tag 정보",
    "article": [
      {
        "comment": "제목",
        "key": "title",
        "type": "text",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "news_headline"
            }
          },
          {
            "name": "h4",
            "attribute": {
              "class": "title"
            }
          }
        ]
      },
      {
        "comment": "기사 원문 주소",
        "key": "source_url",
        "type": "href",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "news_headline"
            }
          },
          {
            "name": "div",
            "attribute": {
              "class": "info"
            }
          },
          {
            "name": "a",
            "attribute": {
              "class": "press_link"
            }
          }
        ]
      },
      {
        "comment": "날짜",
        "key": "date",
        "type": "text",
        "type_convert": "date",
        "value_type": "single",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "news_headline"
            }
          },
          {
            "name": "div",
            "attribute": {
              "class": "info"
            }
          }
        ],
        "replace": [
          {
            "from": "기사입력",
            "to": ""
          },
          {
            "from": "^.+최종수정",
            "to": ""
          },
          {
            "from": "오전(.+)$",
            "to": "\\g<1> AM"
          },
          {
            "from": "오후(.+)$",
            "to": "\\g<1> PM"
          }
        ],
        "remove": [
          {
            "name": "a",
            "attribute": {
              "class": "press_link"
            }
          }
        ]
      },
      {
        "comment": "html 본문",
        "key": "html_content",
        "type": "html",
        "value_type": "merge",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "id": "newsEndContents"
            }
          }
        ],
        "remove": [
          {
            "name": "p",
            "attribute": {
              "class": "source"
            }
          }
        ]
      },
      {
        "comment": "텍스트 본문",
        "key": "content",
        "type": "text",
        "value_type": "merge",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "id": "newsEndContents"
            }
          }
        ]
      },
      {
        "comment": "이미지",
        "key": "photo_list",
        "type": "html",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "id": "newsEndContents"
            }
          },
          {
            "name": "span",
            "attribute": {
              "class": "end_photo_org"
            }
          },
          {
            "name": "img"
          }
        ]
      },
      {
        "comment": "이미지 캡션",
        "key": "photo_caption",
        "type": "text",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "id": "newsEndContents"
            }
          },
          {
            "name": "span",
            "attribute": {
              "class": "end_photo_org"
            }
          },
          {
            "name": "em",
            "attribute": {
              "class": "img_desc"
            }
          }
        ]
      },
      {
        "comment": "동영상",
        "key": "vod",
        "type": "html",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "id": "newsEndContents"
            }
          },
          {
            "name": "iframe"
          }
        ]
      }
    ]
  }
}
