{
  "_id": "einfomax",
  "trace_list": {
    "parser": "lxml",
    "#trace": "전체 html 에서 추출해야하는 전체 tag 목록",
    "trace": [
      {
        "name": "div",
        "attribute": {
          "class": "table-row"
        }
      }
    ],
    "#list": "기사 목록에서 추출해야하는 하나의 기사 정보",
    "list": [
      {
        "comment": "제목",
        "key": "title",
        "type": "text",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "list-titles table-cell"
            }
          },
          {
            "name": "strong"
          }
        ]
      },
      {
        "comment": "url",
        "key": "url",
        "type": "href",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "list-titles table-cell"
            }
          },
          {
            "name": "a",
            "attribute": {
              "class": "links"
            }
          }
        ]
      },
      {
        "comment": "날짜",
        "key": "date",
        "type": "text",
        "type_convert": "date",
        "value_type": "single",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "list-dated table-cell"
            }
          }
        ],
        "replace": [
          {
            "from": "^.+[|]",
            "to": ""
          }
        ]
      }
    ],
    "#article": "기사 본문에서 추출해야하는 tag 정보",
    "article": [
      {
        "comment": "제목",
        "key": "title",
        "type": "text",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "article-head-title"
            }
          }
        ]
      },
      {
        "comment": "날짜",
        "key": "date",
        "type": "text",
        "type_convert": "date",
        "value_type": "single",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "info-text"
            }
          }
        ],
        "replace": [
          {
            "from": "^.*승인",
            "to": ""
          },
          {
            "from": "댓글.*$",
            "to": ""
          },
          {
            "from": "[|]",
            "to": ""
          }
        ]
      },
      {
        "comment": "글쓴이",
        "key": "author",
        "type": "text",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "info-text"
            }
          }
        ],
        "replace": [
          {
            "from": "승인.+$",
            "to": ""
          }
        ]
      },
      {
        "comment": "html 본문",
        "key": "html_content",
        "type": "html",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "itemprop": "articleBody"
            }
          }
        ],
        "remove": [
          {
            "name": "div",
            "attribute": {
              "class": "view-copyright"
            }
          },
          {
            "name": "div",
            "attribute": {
              "class": "view-editors"
            }
          }
        ]
      },
      {
        "comment": "텍스트 본문",
        "key": "content",
        "type": "text",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "itemprop": "articleBody"
            }
          }
        ],
        "remove": [
          {
            "name": "div",
            "attribute": {
              "class": "view-copyright"
            }
          },
          {
            "name": "div",
            "attribute": {
              "class": "view-editors"
            }
          }
        ]
      }
    ]
  }
}
