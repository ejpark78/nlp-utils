{
  "trace_list": {
    "parser": "html5lib",
    "#trace": "전체 html 에서 추출해야하는 전체 tag 목록",
    "trace": [
      {
        "select": "div.articleList table tr"
      }
    ],
    "#list": "기사 목록에서 추출해야하는 하나의 기사 정보",
    "list": [
      {
        "comment": "게시글 아이디",
        "key": "article_id",
        "type": "text",
        "value_type": "single",
        "tag": [
          {
            "select": "td.bbsNo"
          }
        ]
      },
      {
        "comment": "제목",
        "key": "title",
        "type": "text",
        "value_type": "single",
        "tag": [
          {
            "select": "td.bbsSubject a.sj_ln"
          }
        ]
      },
      {
        "comment": "소분류",
        "key": "sub_category",
        "type": "text",
        "tag": [
          {
            "select": "td.bbsSubject a.sj_ln"
          }
        ],
        "replace": [
          {
            "from": "^.*[[](.+?)[]].*$",
            "to": "\\g<1>"
          }
        ]
      },
      {
        "comment": "url",
        "key": "url",
        "type": "href",
        "value_type": "single",
        "tag": [
          {
            "select": "td.bbsSubject a.sj_ln"
          }
        ]
      },
      {
        "comment": "사용자명",
        "key": "writer",
        "type": "text",
        "value_type": "single",
        "tag": [
          {
            "select": "td.bbsNick"
          }
        ]
      },
      {
        "comment": "날짜",
        "key": "date",
        "type": "text",
        "tag": [
          {
            "select": "td.date"
          }
        ]
      },
      {
        "comment": "조회수",
        "key": "view_count",
        "type": "text",
        "tag": [
          {
            "select": "td.hit"
          }
        ]
      },
      {
        "comment": "추천수",
        "key": "recommend_count",
        "type": "text",
        "tag": [
          {
            "select": "td.req"
          }
        ]
      }
    ],
    "#article": "기사 본문에서 추출해야하는 tag 정보",
    "article": [
      {
        "comment": "소분류",
        "key": "sub_category",
        "type": "text",
        "tag": [
          {
            "select": "div.articleCategory"
          }
        ],
        "replace": [
          {
            "from": "^.*[[](.+?)[]].*$",
            "to": "\\g<1>"
          }
        ]
      },
      {
        "comment": "사용자명",
        "key": "writer",
        "type": "text",
        "tag": [
          {
            "select": "div.articleWriter"
          }
        ]
      },
      {
        "comment": "날짜",
        "key": "date",
        "type": "text",
        "type_convert": "date",
        "value_type": "single",
        "tag": [
          {
            "select": "div.articleDate"
          }
        ]
      },
      {
        "comment": "조회수",
        "key": "view_count",
        "type": "text",
        "tag": [
          {
            "select": "div.articleHit"
          }
        ],
        "replace": [
          {
            "from": "^.*조회:.*([0-9]+).*$",
            "to": "\\g<1>"
          }
        ]
      },
      {
        "comment": "추천수",
        "key": "recommend_count",
        "type": "text",
        "tag": [
          {
            "select": "span#bbsRecommendNum1"
          }
        ]
      },
      {
        "comment": "제목",
        "key": "title",
        "type": "text",
        "tag": [
          {
            "select": "div.articleTitle"
          }
        ]
      },
      {
        "comment": "html 본문",
        "key": "html_content",
        "type": "html",
        "value_type": "merge",
        "tag": [
          {
            "select": "div#tbArticle"
          }
        ]
      },
      {
        "comment": "텍스트 본문",
        "key": "content",
        "type": "text",
        "value_type": "merge",
        "tag": [
          {
            "select": "div#powerbbsContent"
          }
        ]
      },
      {
        "comment": "댓글 목록",
        "key": "reply_html_content",
        "type": "html",
        "tag": [
          {
            "select": "div.cmtMain"
          }
        ]
      },
      {
        "comment": "댓글 작성자",
        "key": "reply_list.writer",
        "type": "text",
        "tag": [
          {
            "select": "div.cmtOne span.nickname"
          }
        ]
      },
      {
        "comment": "댓글 텍스트",
        "key": "reply_list.text",
        "type": "text",
        "tag": [
          {
            "select": "div.cmtOne"
          },
          {
            "name": "span",
            "attribute": {
              "class": "content cmtContentOne"
            }
          }
        ]
      },
      {
        "comment": "댓글 작성 시간",
        "key": "reply_list.date",
        "type": "text",
        "type_convert": "date",
        "value_type": "single",
        "tag": [
          {
            "select": "div.cmtOne span.date"
          }
        ],
        "replace": [
          {
            "from": "^.*[(].*([0-9]+)[)].*$",
            "to": "\\g<1>"
          }
        ]
      },
      {
        "comment": "공감",
        "key": "reply_list.like_count",
        "type": "text",
        "tag": [
          {
            "select": "div.cmtOne span.likeCmtBttn705597_num"
          }
        ]
      },
      {
        "comment": "비공감",
        "key": "reply_list.dislike_count",
        "type": "text",
        "tag": [
          {
            "select": "div.cmtOne span.disCmtBttn705597_num"
          }
        ]
      }
    ]
  }
}
