{
  "trace_list": {
    "parser": "html5lib",
    "#trace": "전체 html 에서 추출해야하는 전체 tag 목록",
    "trace": [
      {
        "select": "table.tbl_type01 tr"
      }
    ],
    "#list": "기사 목록에서 추출해야하는 하나의 기사 정보",
    "list": [
      {
        "comment": "제목",
        "key": "title",
        "type": "title",
        "value_type": "single",
        "tag": [
          {
            "name": "a"
          }
        ]
      },
      {
        "comment": "url",
        "key": "url",
        "type": "href",
        "value_type": "single",
        "tag": [
          {
            "name": "a"
          }
        ]
      },
      {
        "comment": "제목 헤더",
        "key": "title_header",
        "type": "text",
        "tag": [
          {
            "select": "span.word"
          }
        ]
      },
      {
        "comment": "댓글수",
        "key": "reply_count",
        "type": "text",
        "tag": [
          {
            "select": "span.replycnt"
          }
        ],
        "replace": [
          {
            "from": "[[]",
            "to": ""
          },
          {
            "from": "[]]",
            "to": ""
          }
        ]
      }
    ],
    "#article": "기사 본문에서 추출해야하는 tag 정보",
    "article": [
      {
        "comment": "제목 헤더",
        "key": "title_header",
        "type": "text",
        "tag": [
          {
            "select": "div.left_cont div.titles span.word"
          }
        ]
      },
      {
        "comment": "제목",
        "key": "title",
        "type": "text",
        "tag": [
          {
            "select": "div.left_cont div.titles"
          }
        ],
        "remove": [
          {
            "name": "span",
            "attribute": {
              "class": "word"
            }
          }
        ]
      },
      {
        "comment": "날짜",
        "key": "date",
        "type": "text",
        "type_convert": "date",
        "value_type": "single",
        "tag": [
          {
            "select": "ul.view_head div.text div.text_right div.text3 span.val"
          }
        ]
      },
      {
        "comment": "추천수",
        "key": "good_count",
        "type": "text",
        "tag": [
          {
            "select": "ul.view_head div.text div.text_left div.text2"
          }
        ],
        "replace": [
          {
            "from": "^.*추천 ([0-9]+).*$",
            "to": "\\g<1>"
          }
        ]
      },
      {
        "comment": "조회수",
        "key": "view_count",
        "type": "text",
        "tag": [
          {
            "select": "ul.view_head div.text div.text_left div.text2"
          }
        ],
        "replace": [
          {
            "from": "^.*조회 ([0-9]+).*$",
            "to": "\\g<1>"
          }
        ]
      },
      {
        "comment": "글쓴이",
        "key": "author",
        "type": "text",
        "tag": [
          {
            "select": "ul.view_head div.text div.text_left span.nick"
          }
        ],
        "replace": [
          {
            "from": "입력.+$",
            "to": ""
          }
        ]
      },
      {
        "comment": "html 본문",
        "key": "html_content",
        "type": "html",
        "value_type": "merge",
        "tag": [
          {
            "select": "div.contents div.left_cont"
          }
        ]
      },
      {
        "comment": "텍스트 본문",
        "key": "content",
        "type": "text",
        "value_type": "merge",
        "tag": [
          {
            "select": "div.view_context div#contentDetail"
          }
        ]
      },
      {
        "comment": "댓글 텍스트",
        "key": "reply_list.text",
        "type": "text",
        "tag": [
          {
            "select": "div.reply_list div.txt_box span.re_txt"
          }
        ]
      },
      {
        "comment": "댓글 사용자",
        "key": "reply_list.author",
        "type": "text",
        "tag": [
          {
            "select": "div.reply_list div.txt_box span.name"
          }
        ]
      },
      {
        "comment": "댓글 시간",
        "key": "reply_list.date",
        "type": "text",
        "type_convert": "date",
        "tag": [
          {
            "select": "div.reply_list div.txt_box span.date"
          }
        ]
      }
    ]
  }
}
