{
  "daemon": {
    "sleep": 1800
  },
  "#trace_list": "기사 목록 정보, 기사를 저장할 위치/인덱스, 슬립타임 설정",
  "trace_list": [
    {
      "host": "https://corpus.ncsoft.com:9200",
      "http_auth": "crawler:crawler2019",
      "index": "crawler-bbs-lineagem",
      "sleep": 3,
      "list": [
        {
          "url_frame": "https://lineagem.plaync.com/board/all/articles.json?page={page}&isReferer=false&isVote=true&size=20&query=&searchType=&categoryId=&summary=true",
          "parser": "json",
          "category": "all",
          "check_id": true,
          "headers": {
            "Content-Type": "application/json"
          },
          "trace": "articleList",
          "mapping": {
            "url": "https://lineagem.plaync.com/board/{boardAlias}/article/{articleId}.json",
            "date": "{postDate}",
            "reserved1": "",
            "reserved2": "",
            "reserved3": "",
            "reserved4": "",
            "userPlatform": "",
            "userAgent": "",
            "hasAttachment": "",
            "hasThumbnail": "",
            "writer": "/"
          }
        }
      ],
      "article": {
        "document_id": {
          "type": "value",
          "frame": "{articleId}"
        },
        "parser": "json",
        "headers": {
          "Content-Type": "application/json"
        },
        "mapping": {
          "html_content": "{contents}",
          "prevNextArticleEntries": "",
          "nextArticle": "",
          "voteContents": "",
          "communityLevelName": "",
          "isScrapArticle": "",
          "article": "/",
          "reserved1": "",
          "reserved2": "",
          "reserved3": "",
          "reserved4": "",
          "userPlatform": "",
          "userAgent": "",
          "hasAttachment": "",
          "hasThumbnail": "",
          "writer": "/",
          "category": "/"
        }
      },
      "post_request": [
        {
          "url_frame": "https://lineagem.plaync.com/board/{boardAlias}/article/{articleId}/comment/search/moreComment?fields=vote&previousCommentId=0&moreSize=20&moreDirection=BEFORE&fields=&orderType=good",
          "method": "GET",
          "response_type": "json",
          "key": "reply_list",
          "field": "commentList"
        }
      ],
      "post_process": [
      ]
    }
  ]
}
