{
  "_id": "spotvnews",
  "trace_list": {
    "parser": "lxml",
    "trace": [
      {
        "name": "div",
        "attribute": {
          "class": "summary_list"
        }
      },
      {
        "name": "li",
        "attribute": {
          "class": "li title"
        }
      }
    ],
    "list": [
      {
        "comment": "제목",
        "key": "title",
        "type": "text",
        "tag": [
          {
            "name": "a",
            "attribute": {
              "class": "title_a"
            }
          }
        ]
      },
      {
        "comment": "url",
        "key": "url",
        "type": "href",
        "tag": [
          {
            "name": "a"
          }
        ]
      },
      {
        "comment": "날짜",
        "key": "date",
        "type": "text",
        "type_convert": "date",
        "tag": [
          {
            "name": "p",
            "attribute": {
              "class": "date"
            }
          }
        ],
        "replace": [
          {
            "from": "^.+([1-2][09][0-9][0-9][.\\- :0-9]+).+$",
            "to": "\\g<1>"
          }
        ]
      }
    ],
    "article": [
      {
        "comment": "제목",
        "key": "title",
        "type": "text",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "arl_view_box"
            }
          },
          {
            "name": "h1",
            "attribute": {
              "class": "arl_view_title"
            }
          }
        ]
      },
      {
        "comment": "글쓴이",
        "key": "author",
        "type": "text",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "class": "arl_view_box"
            }
          },
          {
            "name": "span",
            "attribute": {
              "class": "arl_view_writer"
            }
          }
        ],
        "replace": [
          {
            "from": " 기자.+$",
            "to": ""
          }
        ]
      },
      {
        "comment": "html 본문",
        "key": "html_content",
        "type": "html",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "itemprop": "articleBody"
            }
          }
        ]
      },
      {
        "comment": "이미지",
        "key": "image_list.image",
        "type": "src",
        "tag": [
          {
            "name": "table",
            "attribute": {
              "class": "news_photo_table"
            }
          },
          {
            "name": "img"
          }
        ]
      },
      {
        "comment": "이미지 캡션",
        "key": "image_list.caption",
        "type": "text",
        "delete": true,
        "tag": [
          {
            "name": "table",
            "attribute": {
              "class": "news_photo_table"
            }
          },
          {
            "name": "td",
            "attribute": {
              "class": "news_photo_table_caption"
            }
          }
        ]
      },
      {
        "comment": "텍스트 본문",
        "key": "content",
        "type": "text",
        "tag": [
          {
            "name": "div",
            "attribute": {
              "itemprop": "articleBody"
            }
          }
        ]
      }
    ]
  }
}
